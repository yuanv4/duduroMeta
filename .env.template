# Flask Configuration
# Required: Secret key for Flask session management (min 32 chars)
FLASK_SECRET_KEY=your-secret-key-here

# Optional: Enable Flask debug mode (true/false)
FLASK_DEBUG=False

# Chatbot Configuration
# Required: Base URL for chatbot API (must be valid URL)
CHATBOT_BASE_URL=https://api.example.com

# Required: API key for chatbot service (min 32 chars)
CHATBOT_API_KEY=your-chatbot-api-key

# Optional: Model name for chatbot service
CHATBOT_MODEL=deepseek-chat

# TTS Configuration
# Required: Application ID for TTS service (min 8 chars)
TTS_APPID=your-tts-appid

# Required: Access token for TTS service (min 32 chars)
TTS_ACCESS_TOKEN=your-tts-access-token

# Optional: Cluster name for TTS service
TTS_CLUSTER=volcano_tts

# Optional: Voice type for TTS service
TTS_VOICE_TYPE=BV700_V2_streaming

# Optional: Language code for TTS service (zh/en)
TTS_LANGUAGE=zh

# Required: API endpoint for TTS service (must be valid URL)
TTS_API_URL=https://tts.example.com

# Optional: Maximum text length for TTS input (1-500)
TTS_MAX_TEXT_LENGTH=30
